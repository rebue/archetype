<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="hlw"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<requiredProperties>
		<!-- 微服务端口号 -->
		<requiredProperty key="microServerPort">
		</requiredProperty>
		<!-- eureka服务器地址 -->
		<requiredProperty key="eurekaUrl">
			<defaultValue>http://127.0.0.1:8761/eureka/</defaultValue>
		</requiredProperty>
		<!-- rabbitmq服务器主机地址 -->
		<requiredProperty key="rabbitmqHost">
			<defaultValue>127.0.0.1</defaultValue>
		</requiredProperty>
		<!-- rabbitmq服务器端口号 -->
		<requiredProperty key="rabbitmqPort">
			<defaultValue>5672</defaultValue>
		</requiredProperty>
		<!-- rabbitmq用户名称 -->
		<requiredProperty key="rabbitmqUser">
			<defaultValue>guest</defaultValue>
		</requiredProperty>
		<!-- rabbitmq密码 -->
		<requiredProperty key="rabbitmqPswd">
			<defaultValue>guest</defaultValue>
		</requiredProperty>
		<!-- jdbc数据库驱动 -->
		<requiredProperty key="jdbcDriver">
			<defaultValue>com.mysql.cj.jdbc.Driver</defaultValue>
		</requiredProperty>
		<!-- jdbc链接 -->
		<requiredProperty key="jdbcUrl">
			<defaultValue>jdbc:mysql://127.0.0.1:3306/${artifactId}?useUnicode=true&amp;characterEncoding=utf-8&amp;allowMultiQueries=true</defaultValue>
		</requiredProperty>
		<!-- jdbc用户名称 -->
		<requiredProperty key="jdbcUser">
			<defaultValue>${artifactId}</defaultValue>
		</requiredProperty>
		<!-- jdbc密码 -->
		<requiredProperty key="jdbcPswd">
			<defaultValue>${artifactId}</defaultValue>
		</requiredProperty>
		<!-- 项目名称首字母大写 -->
		<requiredProperty key="projectNameCapitalise">
			<defaultValue>${artifactId.substring(0,1).toUpperCase().concat(${artifactId.substring(1)})}</defaultValue>
		</requiredProperty>
		<!-- 项目名称大写 -->
		<requiredProperty key="projectNameUpperCase">
			<defaultValue>${artifactId.toUpperCase()}</defaultValue>
		</requiredProperty>
	</requiredProperties>

	<fileSets>
		<fileSet encoding="UTF-8">
			<directory>db/script</directory>
			<includes>
				<include>**/*.sql</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>db/model</directory>
			<includes>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>doc</directory>
			<includes>
				<include>**/*.md</include>
				<include>**/*.doc</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>db</directory>
			<includes>
				<include>**/*.md</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>**/*.md</include>
				<include>.gitignore</include>
			</includes>
		</fileSet>
	</fileSets>
	<modules>
		<module id="${rootArtifactId}-gen" dir="__rootArtifactId__-gen" name="${rootArtifactId}-gen">
			<fileSets>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.xml</include>
						<include>**/*.properties</include>
						<include>**/*.json</include>
						<!-- 此文件要取属性来设置微服务的端口 -->
						<include>btl/test.btl</include>
					</includes>
				</fileSet>
				<fileSet filtered="false" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.btl</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
		<module id="${rootArtifactId}-api" dir="__rootArtifactId__-api" name="${rootArtifactId}-api">
			<fileSets>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
						<include>**/*.xml</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
		<module id="${rootArtifactId}-bll" dir="__rootArtifactId__-bll" name="${rootArtifactId}-bll">
			<fileSets>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
						<include>**/*.xml</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
		<module id="${rootArtifactId}-svr" dir="__rootArtifactId__-svr" name="${rootArtifactId}-svr">
			<fileSets>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.xml</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.yml</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/test/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
	</modules>
</archetype-descriptor>
